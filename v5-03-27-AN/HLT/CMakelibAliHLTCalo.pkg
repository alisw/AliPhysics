    AliHLTCaloConstantsHandler.h
    AliHLTCaloClusterizer.h
    AliHLTCaloClusterizerNbyN.h
    AliHLTCaloClusterizerComponent.h
    AliHLTCaloDigitMaker.h
    AliHLTCaloClusterAnalyser.h

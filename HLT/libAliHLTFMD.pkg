HDRS:=$(patsubst %,FMD/%,$(MODULE_HDRS))
DHDR:=$(patsubst %,FMD/%,$(MODULE_DHDR))
CINTAUTOLINK:= $(shell test "x$(MODULE_DHDR)" = "x" && echo 1)

EDEFINE      := ${HLTDEFS}
PACKCXXFLAGS := ${HLTCXXFLAGS}
